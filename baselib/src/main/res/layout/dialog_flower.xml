<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/toast_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="@dimen/y140"
        android:layout_height="@dimen/y140"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:background="@drawable/flower_bg"
        android:padding="@dimen/y10"
         >

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="@dimen/y96"
            android:layout_height="@dimen/y96"
            android:layout_centerHorizontal="true"              
            android:indeterminateDrawable="@drawable/flower_rotate"
            android:indeterminateDuration="1480"
            android:paddingTop="@dimen/y10"
            android:paddingLeft="@dimen/y10"
            android:paddingRight="@dimen/y10"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progressbar"
            android:layout_centerHorizontal="true"
            android:text="正在加载..."
            android:textColor="@android:color/white"
            android:textSize="@dimen/y28"
            android:visibility="gone"
             />
    </RelativeLayout>

</RelativeLayout>