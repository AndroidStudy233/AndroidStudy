<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shiqkuangsan.mycustomviews">

    <!-- 读取手机存储 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- 用于访问GPS定位 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- 用于获取运营商信息，用于支持提供运营商信息相关的接口 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 用于访问wifi网络信息，wifi信息会用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 用于获取wifi的获取权限，wifi信息会用来进行网络定位 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- 用于访问网络，网络定位需要上网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 用于读取手机当前的状态 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 用于写入缓存数据到扩展存储卡 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 用于申请调用A-GPS模块 -->
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.MainActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.SwitchPictureActivity"
            android:theme="@style/AppTheme_NoActionBar" />
        <activity android:name=".ui.activity.MyOnOffActivity" />
        <activity android:name=".ui.activity.PullRefreshActivity" />
        <activity
            android:name=".ui.activity.SlideMenuActivity"
            android:theme="@style/AppTheme_NoActionBar" />
        <activity android:name=".ui.activity.PtrDemoActivity" />
        <activity android:name=".ui.activity.PicChooserActivity" />
        <activity
            android:name=".ui.activity.PicLookerActivity"
            android:theme="@style/AppTheme_NoActionBar" />
        <activity android:name=".ui.activity.XUtilsActivity" />
        <activity
            android:name=".ui.activity.qzone.MomentListActivity"
            android:theme="@style/theme_picchose_act" />
        <activity
            android:name=".ui.activity.qzone.MomentAddActivity"
            android:theme="@style/theme_picchose_act" />
        <activity
            android:name=".ui.activity.CoordinatorActivity"
            android:theme="@style/coordinator_emma_immerse" />
        <activity
            android:name=".ui.activity.RecyclerViewActivity"
            android:theme="@style/AppTheme_NoActionBar" />
        <activity
            android:name=".ui.activity.ImmerseActivity"
            android:theme="@style/AppTheme_NoActionBar" />
        <activity
            android:name=".ui.activity.immerse.ColorImmerseActivity"
            android:theme="@style/AppTheme_NoActionBar" />
        <activity
            android:name=".ui.activity.immerse.BgImmerseActivity"
            android:theme="@style/AppTheme_NoActionBar">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.shiqkuangsan.baiducityselector.CitySelectorActivity"
            android:theme="@style/AppTheme_NoActionBar"
            android:windowSoftInputMode="adjustPan|stateUnspecified" />
        <activity
            android:name=".ui.activity.TestSwipeBackActivity"
            android:label="@string/title_activity_swipeback1"
            android:theme="@style/AppTheme_NoActionBar" />
        <activity android:name=".ui.activity.testswipeback.Activity2" />
        <activity android:name=".ui.activity.testswipeback.Activity3" />
        <activity android:name=".ui.activity.MDSettingsActivity" />

        <!-- 高德地图相关的service和meta -->
        <service android:name="com.amap.api.location.APSService" />

        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="f43853597dc1380b67ea401072fd44e5" />

        <activity
            android:name=".ui.activity.api21.Api21Activity"
            android:label="@string/title_activity_api21"
            android:theme="@style/AppTheme_NoActionBar.transition" />
        <activity
            android:name=".ui.activity.Api21ExploseActivity"
            android:theme="@style/AppTheme_NoActionBar" />
    </application>

</manifest>