<?xml version="1.0" encoding="utf-8"?>
<com.shiqkuangsan.mycustomviews.ui.custom.swipe1.SwipeMenuView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:paddingBottom="1dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_sideslip_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAppearance="?android:attr/textAppearanceListItem"
            tools:text="Android RecyclerView" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_sideslip_top"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="#d9dee4"
        android:padding="10dp"
        android:text="置顶"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btn_sideslip_delete"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="#DB444E"
        android:padding="10dp"
        android:text="删除"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:textColor="#fff" />

</com.shiqkuangsan.mycustomviews.ui.custom.swipe1.SwipeMenuView>