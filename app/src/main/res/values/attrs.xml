<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--自定义小开关属性-->
    <declare-styleable name="MyOnOffView">
        <attr name="switch_bg" format="reference" />
        <attr name="switch_slide" format="reference" />
        <attr name="switch_state" format="boolean" />
    </declare-styleable>

    <!--自定义下拉刷新属性-->
    <declare-styleable name="MyPullRefreshListView">
        <attr name="tv_head" format="string" />
        <attr name="tv_foot" format="string" />
    </declare-styleable>

    <!--自定义适配布局属性-->
    <declare-styleable name="AutoRatioLayout">
        <attr name="ratio" format="float" />
    </declare-styleable>

    <!--滑动返回SwipeLayout的自定义属性-->
    <declare-styleable name="SwipeBackLayout">
        <attr name="edge_size" format="dimension" />
        <attr name="edge_flag">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="bottom" value="2" />
            <enum name="all" value="3" />
        </attr>
        <attr name="shadow_left" format="reference" />
        <attr name="shadow_right" format="reference" />
        <attr name="shadow_bottom" format="reference" />
    </declare-styleable>
    <!--滑动返回SwipeLayout的样式,R.style.SwipeBackLayout-->
    <attr name="SwipeBackLayoutStyle" format="reference" />

    <!--侧滑删除自定义属性-->
    <declare-styleable name="SwipeMenuView">
        <attr name="swipeEnable" format="boolean" />
        <attr name="ios" format="boolean" />
        <attr name="leftSwipe" format="boolean" />
    </declare-styleable>
    <declare-styleable name="IndicatorView">
        <attr name="selectCircleColor" format="reference"/>
        <attr name="unSelectCircleColor" format="reference"/>
        <attr name="radius" format="dimension"/>
        <attr name="circleSpace" format="dimension"/>
        <attr name="unSelectCircleBorderWidth" format="dimension"/>
        <attr name="defautSelectPosition" format="integer"/>
    </declare-styleable>
</resources>